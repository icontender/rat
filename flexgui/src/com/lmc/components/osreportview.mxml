<?xml version="1.0" encoding="utf-8"?>
<mx:ColumnChart xmlns:mx="http://www.adobe.com/2006/mxml"
			height="100%" 
            width="45%" 
            paddingLeft="5" 
            paddingRight="5" 
            showDataTips="true" 
            
            
	
	
	 enabled="true">
	<mx:Script>
        <![CDATA[          
        import mx.collections.ArrayCollection;

        
        ]]>
    </mx:Script>  
        <!-- Define custom colors for use as fills. -->
    <mx:SolidColor id="sc1" color="yellow" alpha=".8"/>
    <mx:SolidColor id="sc2" color="0xCCCCCC" alpha=".6"/>
    <mx:SolidColor id="sc3" color="0xFFCC66" alpha=".6"/>

    <!-- Define custom Strokes for the columns. -->
    <mx:Stroke id="s1" color="yellow" weight="2"/>
    <mx:Stroke id="s2" color="0xCCCCCC" weight="2"/>
    <mx:Stroke id="s3" color="0xFFCC66" weight="2"/>
    
    
    <mx:SeriesInterpolate id="changeEffect" duration="2000"/>  
    <mx:horizontalAxis>
                <mx:CategoryAxis categoryField="Name"/>
    </mx:horizontalAxis>
                
            <mx:series>
                <mx:ColumnSeries showDataEffect="{changeEffect}"
                    xField="Name" 
                    yField="Windows" 
                    displayName="Windows"
                    fill="{sc1}"
                    stroke="{s1}"
                />
                <mx:ColumnSeries showDataEffect="{changeEffect}"
                    xField="Name" 
                    yField="Solaris" 
                    displayName="Solaris"
                    fill="{sc2}"
                    stroke="{s2}"
                />
                <mx:ColumnSeries showDataEffect="{changeEffect}"
                    xField="Name" 
                    yField="Linux" 
                    displayName="Linux"
                    fill="{sc3}"
                    stroke="{s3}"
                />
            </mx:series>
   
</mx:ColumnChart>

